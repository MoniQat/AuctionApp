@{
    ViewData["Title"] = "Item Details";
}
@model AuctionApp.Core.Resources.ItemResource

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-6">
        <form asp-controller="Items" asp-action="AddItem" method="POST">
            <div class="mb-3">
                <label class="form-label">Item name</label>
                <input type="text" class="form-control" asp-for="name" placeholder="Item name">
            </div>
            <div class="mb-3">
                <label class="form-label">Item description</label>
                <textarea class="form-control" rows="3" asp-for="description" placeholder="Item description"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label">Category</label>
                <select class="form-control" asp-for="categoryName">
                    <option>Select a category</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category.name">@category.name</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>