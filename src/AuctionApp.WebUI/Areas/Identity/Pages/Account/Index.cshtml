@page
@model ProfileModel

@{
    ViewData["Title"] = "Profile";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            @if (Model.userInfo.profileImage != null)
            {
                <img src=Model.userInfo.profileImage class="w-100 h-auto" />
            } 
            else 
            {
                <img src=https://as2.ftcdn.net/v2/jpg/02/44/43/69/1000_F_244436923_vkMe10KKKiw5bjhZeRDT05moxWcPpdmb.jpg class="w-100 h-auto" />
            }
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Personal information</h3>
            <a class="nav-link text-white btn btn-secondary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Change information</a>
            <hr />
            @{
                <p>First name: @Model.userInfo.firstName</p>
                <p>Last name: @Model.userInfo.lastName</p>
                <p>Date of birth: @Model.userInfo.dateOfBirth.ToString("dd/MM/yyyy")</p>
                <p>Phone number: @Model.userInfo.phoneNumber</p>
                <p>Email: @Model.userInfo.email</p>
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
